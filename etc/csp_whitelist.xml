<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="bold_commerce" type="host">https://api.boldcommerce.com</value>
                <value id="cashier" type="host">https://cashier.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="bold_commerce" type="host">https://api.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="bold_commerce" type="host">https://api.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="bold_commerce_static" type="host">https://static.boldcommerce.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
