<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bold_checkout_vat_exempt" resource="default" engine="innodb" comment="Bold Checkout Cart VAT Exempt Data">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="quote_id" unsigned="true" nullable="false" identity="false" comment="Magento Quote ID"/>
        <column xsi:type="smallint" name="vat_exempt_status" nullable="false" default="0" comment="VAT Exempt Status."/>
        <column xsi:type="varchar" name="vat_applient_name" nullable="true" length="255" comment="VAT Applient Name"/>
        <column xsi:type="varchar" name="vat_selected_reason" nullable="true" length="255" comment="VAT Selected Reason"/>
        <column xsi:type="smallint" name="vat_agree_terms_and_conditions" default="0" comment="VAT Agree to Terms and Conditions Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BOLD_CHECKOUT_VAT_EXEMPT_UNIQUE">
            <column name="quote_id"/>
        </constraint>
    </table>
</schema>
