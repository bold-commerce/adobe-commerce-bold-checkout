<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/queue.xsd">
    <broker topic="bold.checkout.sync.products" exchange="magento">
        <queue name="bold.checkout.sync.products" consumer="bold.checkout.sync.products" handler="Bold\Platform\Model\Queue\Handler\Product::handle"/>
    </broker>
    <broker topic="bold.checkout.sync.categories" exchange="magento">
        <queue name="bold.checkout.sync.categories" consumer="bold.checkout.sync.categories" handler="Bold\Platform\Model\Queue\Handler\Category::handle"/>
    </broker>
    <broker topic="bold.checkout.sync.customers" exchange="magento">
        <queue name="bold.checkout.sync.customers" consumer="bold.checkout.sync.customers" handler="Bold\Platform\Model\Queue\Handler\Customer::handle"/>
    </broker>
</config>
