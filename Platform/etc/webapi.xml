<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="POST" url="V1/shops/:shopId/orders">
        <service class="Bold\Platform\Api\PlaceOrderInterface" method="place"/>
        <resources>
            <resource ref="Magento_Sales::create"/>
        </resources>
    </route>
    <route method="POST" url="V1/shops/:shopId/secret/register">
        <service class="Bold\Platform\Api\RegisterSharedSecretInterface" method="register"/>
        <resources>
            <resource ref="Bold_Checkout::create"/>
        </resources>
    </route>
    <route method="POST" url="V1/shops/:shopId/customer/email/validate">
        <service class="Bold\Platform\Api\CustomerEmailValidatorInterface" method="validate"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
