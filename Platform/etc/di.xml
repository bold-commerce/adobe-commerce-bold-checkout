<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Bold\Platform\Model\Queue\RequestInterface" type="Bold\Platform\Model\Queue\Request"/>
    <type name="Magento\Catalog\Model\Product\Action">
        <plugin name="bold_checkout_product_save_update_attributes"
                type="Bold\Platform\Plugin\Product\UpdateAttributesPlugin"/>
    </type>
    <type name="Bold\Platform\Model\Sync\GetProducts">
        <arguments>
            <argument name="skipProductTypes" xsi:type="array">
                <item name="configurable" xsi:type="const">Magento\ConfigurableProduct\Model\Product\Type\Configurable::TYPE_CODE</item>
                <item name="grouped" xsi:type="const">Magento\GroupedProduct\Model\Product\Type\Grouped::TYPE_CODE</item>
                <item name="bundle" xsi:type="const">Magento\Bundle\Model\Product\Type::TYPE_CODE</item>
            </argument>
        </arguments>
    </type>
    <type name="Bold\Platform\Model\Queue\Handler\Category\Synchronize">
        <arguments>
            <argument name="client" xsi:type="object">Bold\Platform\Model\Http\PlatformClient</argument>
        </arguments>
    </type>
    <type name="Bold\Platform\Model\Queue\Handler\Product\Synchronize">
        <arguments>
            <argument name="client" xsi:type="object">Bold\Platform\Model\Http\PlatformClient</argument>
        </arguments>
    </type>
    <type name="Bold\Platform\Model\Queue\Handler\Customer\Synchronize">
        <arguments>
            <argument name="client" xsi:type="object">Bold\Platform\Model\Http\PlatformClient</argument>
        </arguments>
    </type>
    <type name="Bold\Platform\Model\CreateIntegration">
        <arguments>
            <argument name="oauthService" xsi:type="object">Bold\Platform\Model\OauthService</argument>
        </arguments>
    </type>
    <virtualType name="Bold\Platform\Model\OauthService" type="Magento\Integration\Model\OauthService">
        <arguments>
            <argument name="tokenProvider" xsi:type="object">Bold\Platform\Model\Oauth\Token\Provider</argument>
        </arguments>
    </virtualType>
    <virtualType name="Bold\Platform\Model\Oauth\Token\Provider" type="Magento\Integration\Model\Oauth\Token\Provider">
        <arguments>
            <argument name="tokenFactory" xsi:type="object">Bold\Platform\Model\Oauth\TokenFactory</argument>
        </arguments>
    </virtualType>
    <virtualType name="Bold\Platform\Model\Oauth\TokenFactory" type="Magento\Integration\Model\Oauth\TokenFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Bold\Platform\Model\Oauth\Token</argument>
        </arguments>
    </virtualType>
    <virtualType name="Bold\Platform\Model\Oauth\Token" type="Magento\Integration\Model\Oauth\Token">
        <arguments>
            <argument name="oauthHelper" xsi:type="object">Bold\Platform\Helper\Oauth</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Catalog\Model\Product\Website">
        <plugin name="bold_checkout_product_add_website"
                type="Bold\Platform\Plugin\Product\AddWebsitePlugin"/>
        <plugin name="bold_checkout_product_remove_website"
                type="Bold\Platform\Plugin\Product\RemoveWebsitePlugin"/>
    </type>
</config>
