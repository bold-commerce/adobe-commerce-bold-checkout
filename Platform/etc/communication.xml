<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Communication/etc/communication.xsd">
    <topic name="bold.checkout.sync.products" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.sync.products" type="Bold\Platform\Model\Queue\Handler\Product\Synchronize" method="handle"/>
    </topic>
    <topic name="bold.checkout.sync.categories" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.sync.categories" type="Bold\Platform\Model\Queue\Handler\Category\Synchronize" method="handle"/>
    </topic>
    <topic name="bold.checkout.sync.customers" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.sync.customers" type="Bold\Platform\Model\Queue\Handler\Customer\Synchronize" method="handle"/>
    </topic>
    <topic name="bold.checkout.delete.products" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.delete.products" type="Bold\Platform\Model\Queue\Handler\Product\Delete" method="handle"/>
    </topic>
    <topic name="bold.checkout.delete.categories" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.delete.categories" type="Bold\Platform\Model\Queue\Handler\Category\Delete" method="handle"/>
    </topic>
    <topic name="bold.checkout.delete.customers" request="Bold\Platform\Model\Queue\RequestInterface">
        <handler name="bold.checkout.delete.customers" type="Bold\Platform\Model\Queue\Handler\Customer\Delete" method="handle"/>
    </topic>
</config>
